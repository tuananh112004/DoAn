include ../mixins/subMenu

header.header
  .container
    .row.align-items-center
      .col-3
        .inner-logo
          a(href="/")
            img(src=settingGeneral.logo, alt="Logo")
      .col-5
        form(
          action="/search"
          method="GET"
        ) 
          div(class="form-group d-flex mb-0")
            input(
              type="text"
              placeholder="Nhập từ khóa..."
              class="form-control"
              name="keyword"
              value=keyword
            )
            button(
              type="submit"
              class="btn btn-primary"
            ) Tìm
      .col-4
        .inner-menu
          ul
            li
              a(href="/") Trang chủ
            li(class="sub-menu")
              - const pathProduct = "/products";
              a(href=pathProduct) Sản phẩm
              if(categoryLayout)
                +sub-menu(categoryLayout, pathProduct)
            li 
              a(href="/cart") Giỏ hàng (#{miniCart ? miniCart.totalQuantity: "0"})
            if(user)
              li 
                a(href="/user/logout") Đăng xuất
              li 
                a(href="/user/info") #{user.fullName}
              li 
                a(href="/users/friends") Danh sách bạn bè  
              li 
                a(href="/rooms-chat") 
                  i.fas.fa-headset.mr-1
                  | Hỗ trợ khách hàng
              
            else 
              li 
                a(href="/user/login") Đăng nhập
              li 
                a(href="/user/register") Đăng ký